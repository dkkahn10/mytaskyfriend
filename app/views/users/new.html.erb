<div class="container">
  <%= form_for @user, class: "col s12", id: "new_user" do |f| %>
    <div class="row">
      <div class="input-field col s9 offset-s1">
        <i class="material-icons prefix">account_circle</i>
        <%= f.text_field :username, label: false, id: "icon_prefix" %>
        <label for="icon_prefix">Username</label>
      </div>
    </div>
    <%= f.hidden_field :email, value: session[:auth]["info"]["email"] %>
    <%= f.hidden_field :oauth_uid, value: session[:auth]["uid"] %>
    <%= f.hidden_field :facebook_photo, value: session[:auth]["info"]["image"] %>
    <%= f.hidden_field :password, value: SecureRandom.hex %>
    <div class="row">
    <%= f.submit "Submit", class: "btn col s2 offset-s7" %>
    </div>
  <% end %>
</div>
