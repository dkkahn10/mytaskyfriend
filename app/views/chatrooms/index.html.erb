<div id="chatrooms">
  <div class="row section">
    <h3 class="col s4"><span class="word deep-orange-text">Create</span> a Chatroom</h3>
    <%= render partial: 'chatroom_form', locals: {chatroom: @chatroom} %>
    <div id="chatroom-errors">
    </div>
  </div>

<div class="row section">
  <h3 class="col s4"><span class="word deep-orange-text">Join</span> a Chatroom</h3>
  <div class="collection chatroom-list col s6 offset-s1">
    <% if @chatrooms.any? %>
      <% @chatrooms.each do |chatroom| %>
        <%= link_to chatroom.topic, chatroom_path(chatroom), class: "collection-item" %>
      <% end %>
    <% else %>
      <p>Be the first one to make a chatroom!</p>
    <% end %>
    <% if @public_rooms.any? %>
      <% @public_rooms.each do |room| %>
        <% unless current_user.chatrooms.include?(room) %>
        <%= link_to room.topic, chatroom_path(room), class: "collection-item" %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
